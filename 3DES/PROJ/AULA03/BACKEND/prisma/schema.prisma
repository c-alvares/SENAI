// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Setor {
  id Int @id @default(autoincrement())
  nome String
  comissao Float
  produto Produtos[]
  vendedor Vendedor[]
}

model Produtos {
  id Int @id @default(autoincrement())
  nome String 
  valor Float
  setor Int
  setores Setor @relation(fields: [setor], references: [id])
  detalhe Detalhes[]
}

model Vendedor {
  id Int @id @default(autoincrement())
  nome String 
  salario Float
  setor Int
  setores Setor @relation(fields: [setor], references: [id])
  venda Vendas[]
}

model Vendas {
  id Int @id @default(autoincrement())
  data DateTime @default(now())
  id_vendedor Int
  vendedor Vendedor @relation(fields: [id_vendedor], references: [id])
  detalhe Detalhes[]
}

model Detalhes {
  id Int @id @default(autoincrement())
  id_produto Int
  id_venda Int
  quantidade Int
  produto Produtos @relation(fields: [id_produto], references: [id])
  venda Vendas @relation(fields: [id_venda], references: [id])
}